{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "esnext",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "esnext"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declarationDir": "./dist/types",
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
  ]
}
